{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "start",
      "path": "webapp",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      },
      "label": "npm: start - webapp"
    },
    {
      "label": "build-ts",
      "type": "shell",
      "command": "node",
      "args": [
        "node_modules/typescript/bin/tsc",
        "-p",
        "tsconfig.json"
      ],
      "group": "build",
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "build-all",
      "type": "shell",
      "command": "npm",
      "args": ["run", "build"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "clean",
      "type": "shell",
      "command": "npm",
      "args": ["run", "clean:public"],
      "problemMatcher": []
    }
  ]
}