{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Angular App",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "npm: start - webapp",
      "url": "http://localhost:4200/",
      "webRoot": "${workspaceFolder}/src/webapp/src",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///./src/*": "${webRoot}/*",
        "webpack:///./*": "${webRoot}/*",
        "webpack:/*": "${workspaceFolder}/src/webapp/*"
      },
      "skipFiles": [
        "${workspaceFolder}/src/webapp/node_modules/**/*",
        "<node_internals>/**/*"
      ],
      "smartStep": true,
      "trace": true
    },
    {
      "name": "Debug STUN Server",
      "type": "node",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/dist/stun/server.js",
      "preLaunchTask": "build-ts",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "sourceMaps": true,
      "smartStep": true,
      "env": {
        "STUN_PORT": "3478",
        "STUN_HTTP_PORT": "8791"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Debug Signaling Server",
      "type": "node",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/dist/signaling/server.js",
      "preLaunchTask": "build-ts",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "sourceMaps": true,
      "smartStep": true,
      "env": {
        "WS_PORT": "8081"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Debug Angular (Demo Build)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:8080/",
      "webRoot": "${workspaceFolder}/src/webapp/src",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///./src/*": "${webRoot}/*",
        "webpack:///./*": "${webRoot}/*",
        "webpack:/*": "${workspaceFolder}/src/webapp/*"
      },
      "skipFiles": [
        "${workspaceFolder}/src/webapp/node_modules/**/*"
      ]
    },
    {
      "name": "Debug All (Full Demo)",
      "type": "node",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/tools/demo.js",
      "preLaunchTask": "build-all",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "sourceMaps": true,
      "smartStep": true,
      "env": {
        "STUN_PORT": "3478",
        "STUN_HTTP_PORT": "8791",
        "WS_PORT": "8081",
        "STATIC_PORT": "8080"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ],
  "compounds": [
    {
      "name": "Debug Backend (STUN + Signaling)",
      "configurations": ["Debug STUN Server", "Debug Signaling Server"]
    },
    {
      "name": "Debug All Projects",
      "configurations": ["Debug STUN Server", "Debug Signaling Server", "Debug Angular App"],
      "stopAll": true
    }
  ]
}